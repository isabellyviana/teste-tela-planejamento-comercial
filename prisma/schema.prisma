generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cadastro {
  codigo  String  @id
  descricao String
  categoria String
  provedor String
  abstecedor String
  fornecedor String
  comprador String
  saldos Saldo[]
  previsoes Previsao[]
}

model Saldo {
  codigo String @id
  filial String
  estoque_livre Int
  bloqueio Int
  reserva Int
  em_transito Int
  PO Int
  codigoId String
  cadastro_ Cadastro@relation(fields: [codigoId], references: [codigo])
  
}

model Previsao {
  codigo String @id
  filial String
  emissao DateTime
  previsao DateTime
  pedido String
  codigoId String
  cadastro_ Cadastro@relation(fields: [codigoId], references: [codigo])
}